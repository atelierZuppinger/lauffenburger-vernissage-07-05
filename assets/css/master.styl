@import '_settings'
@import '_avzCSStools'

blue = rgb(0,73,90)
green = rgb(77,110,105)
brown = rgb(67,56,45)

book = 'ITCFranklinGothicW01-Bk_812647'
medium = 'ITCFranklinGothicW01-Md_812695'
demi = 'ITCFranklinGothicW01-Dm_812668'


normalize-css()
base()
rupture()

+style-placeholder()
  color alpha(black,50%)

h1,h2,h3
  margin 0

body
  overflow hidden
  &:after
    content ''
    position fixed
    width 100%
    height 100%
    border 10px solid white
    top 0
    left 0
    box-sizing border-box
    pointer-events none
  .step1
    display none
#left, #right
  width 50%
  top 0
  position absolute
  height 100%
  overflow hidden
  background url(../img/peinture_guy-bove.jpg) no-repeat center center
  background-size cover
  padding 2%
  box-sizing border-box
  transition all 1s ease 1s
  h2
    font-size 66px
    line-height 62px
    font-family medium
    text-transform uppercase
    transition all .3s linear
    +below(1100px)
      font-size 50px
      line-height 53px
    +below(800px)
      font-size 30px
      line-height 29px
  h3
    font-size 17px
    line-height 29px
    font-family book
    text-transform uppercase
  button, .step1
    position absolute
    top 50%
    border 0
    font-family demi
    font-size 67px
    margin-top -50px
    padding 10px 20px
    color white
    background alpha(brown,.7)
  button
    transition opacity 2s ease
    &.hover
      background white
      color brown
    &.clicked
      opacity 0
  .step1
    word-wrap none
    white-space none
    font-size 29px
#left
  left 0
  color brown
  background-image url(../img/peinture_guy-bove.jpg)
  //background-position center left
  button, .step1
    right 0
    padding-right 0
    border-right 0
  .step1
    right -200px
#right
  right 0
  color white
  background-image url(../img/photo-christophe-lauffenburger.jpg)
  button, .step1
    padding-left 0
    left 0
    border-left 0
  .step1
    left -200px
#bottom
  position fixed
  bottom 5%
  text-align center
  width 100%
  background alpha(rgb(177,188,186), .9)
  color blue
  padding 20px 0
  text-transform uppercase
  h1
    font-family demi
    font-size 29px
    line-height 35px
  h2
    font-family book
    font-size 23px
    line-height 29px
  h3
    font-family book
    font-size 29px
    line-height 35px
    color white
#center
  width 100%
  text-align center
  opacity 0
  transition opacity 1s ease
  h1 
    top 50%
    position absolute
    width 100%
    margin-top -10px
  .close
    position absolute
    top 5%
    right 5%
    border 0
    color brown
    background white
    font-family book
    font-size 67px
    transform rotate(45deg)
    line-height 47px
  form
    position absolute
    width 400px
    left 50%
    margin-left -200px
    height 300px
    top 50%
    margin-top -150px
    .row
      position relative
      float left
      width 100%
      margin-bottom 5px
      .col
        position relative
        float left
        width 100%
        &.col-1_2
          width 50%
          text-align center
    input[type='email'], input[type='text'], textarea
      width 100%
      border 0
      background lighten(brown, 95%)
      box-sizing border-box
      padding 4px
      color black
    textarea
      min-height 150px
    input[type=submit]
      background brown
      color white
      border 0
      text-transform uppercase
.displayForm
  #left, #right
    transition all 1s ease
  #left
    top -100%
  #right
    top 100%
  #center
    opacity 1
    transition opacity 1s ease 1s
.thanks
  .step0
    display none
  .step1
    display block
