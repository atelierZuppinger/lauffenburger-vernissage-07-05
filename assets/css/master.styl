@import '_settings'

blue = rgb(0,73,90)
green = rgb(72,110,105)
brown = rgb(67,56,45)

book = 'ITCFranklinGothicW01-Bk_812647'
medium = 'ITCFranklinGothicW01-Md_812695'
demi = 'ITCFranklinGothicW01-Dm_812668'


normalize-css()
base()

h1,h2,h3
  margin 0

body
  &:after
    content ''
    position fixed
    width 100%
    height 100%
    border 10px solid white
    top 0
    left 0
    box-sizing border-box
    pointer-events none
#left, #right
  width 50%
  top 0
  position absolute
  height 100%
  overflow hidden
  background url(../img/peinture_guy-bove.jpg) no-repeat center center
  background-size cover
  padding 2%
  box-sizing border-box
  transition all 1s ease 1s
  h2
    font-size 66px
    line-height 62px
    font-family medium
    text-transform uppercase
  h3
    font-size 17px
    line-height 29px
    font-family book
    text-transform uppercase
  button
    position absolute
    top 50%
    border 0
    font-family demi
    font-size 67px
    margin-top -50px
    padding 10px 20px
    color white
    background alpha(brown,.7)
    &.hover
      background white
      color brown
#left
  left 0
  color brown
  background-image url(../img/peinture_guy-bove.jpg)
  //background-position center left
  button
    right 0
    padding-right 0
    border-right 0
#right
  right 0
  color white
  background-image url(../img/photo-christophe-lauffenburger.jpg)
  button
    padding-left 0
    left 0
    border-left 0
#bottom
  position fixed
  bottom 10%
  text-align center
  width 100%
  background alpha(lighten(green,60%), .9)
  color blue
  padding 20px 0
  h1
    font-family demi
    font-size 29px
    line-height 35px
  h2
    font-family book
    font-size 23px
    line-height 29px
  h3
    font-family book
    font-size 29px
    line-height 35px
    color white
#center
  width 100%
  text-align center
  opacity 0
  transition opacity 1s ease
  h1 
    margin-top 10%
  .close
    position absolute
    top 5%
    right 5%
    border 0
    color brown
    background white
    font-family book
    font-size 67px
    transform rotate(45deg)
    line-height 47px
.displayForm
  #left, #right
    transition all 1s ease
  #left
    top -100%
  #right
    top 100%
  #center
    opacity 1
    transition opacity 1s ease 1s